<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.itsawade.itsawade.ui.fragments.OptionenFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/optionen"
        android:text="@string/optionen"
        android:textSize="20dp"
        />

    <View
        android:background="@android:color/darker_gray"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/viewoptionen"
        android:layout_below="@+id/optionen"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonKonto"
        android:background="@color/autor"
        android:text="@string/botomKonto"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/viewoptionen"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
